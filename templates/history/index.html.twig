{% extends 'base.html.twig' %}

{% block title %}Hello History {{ history.id }} {% endblock %}

{% block body %}
  <!-- Top Container -->
  <div class="container">
    <div class="history info">
      <h2>History Information</h2>
      <span><strong>Seed:</strong> {{ history.description }}</span>
      {% if history.focus is not empty %}
      <br><br>
      <span><strong>Focus:</strong> {{history.focus }}</span>
      {% endif %}

      {% if history.excluded is not empty or history.included is not empty %}
      <h3>Palette</h3>
      {% endif %}
      <div class="container">
        {% include "partials/palette.html.twig" with { title: 'Excluded', items: history.excluded } %}
        {% include "partials/palette.html.twig" with { title: 'Included', items: history.included } %}
      </div>
    </div>
    <div class="player info">
    </div>
  </div>
  <div class="card container">

  </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello History {{ history.id }} {% endblock %}

{% block body %}
  <!-- Top Container -->
  <div class="container">
    <div class="history info">
      <h2>History Information</h2>
      <span><strong>Seed:</strong> {{ history.description }}</span>
      {% if history.focus is not empty %}
      <br><br>
      <span><strong>Focus:</strong> {{history.focus }}</span>
      {% endif %}

      {# TODO: Move all Palette logic into own template #}
      <div class="container">
      {% if history.excluded is not empty or history.included is not empty %}
        <h3>Palette</h3>
      {% endif %}
      {% if history.excluded is not empty %}
        <span><strong>Excluded</strong></span>
        {% include "partials/list.html.twig" with { items: history.excluded } %}
      {% endif %}

      {% if history.included is not empty %}
        <span><strong>Included</strong></span>
        {% include "partials/list.html.twig" with { items: history.included } %}
      {% endif %}
      </div>
    </div>
    <div class="player info">
    </div>
  </div>
  <div class="card container">

  </div>
{% endblock %}

  <!-- The events container will hold all the events belonging to this period -->
  <div id="period-{{period.id}}" class="events container column" data-period-place="{{ period.place }}" data-period-id="{{ period.id }}">
    <!-- The card will hold the actual period information -->
    <div class="period card">
      <p>{{ period.description }}</p>
      {% include "common/tone.html.twig" with { tone: period.tone.value } %}
      {% include "common/add-edit-term.html.twig" with { type: "period", term: period }%}
    </div>
    {% for event in period.events %}
      {% include "event/container.html.twig" with { event: event, numScenes: numScenesByEvent[event.id], scenes: [] } %}
    {% endfor %}
  </div>

{#
  Renders a scene entity.

  Variables:
  * scene - The scene entity object.
#}

<div class="scene card">
  <p>{{ scene.description }}</p>
  {% include "common/tone.html.twig" with { tone: scene.tone.value } %}
  {% include "common/add-edit-term.html.twig" with { type: "scene", edit_id: scene.id, add_id: scene.event.id, default_place: scene.place } %}
</div>